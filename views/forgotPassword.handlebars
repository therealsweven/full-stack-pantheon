<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem">
          <div class="card-body p-5 text-center">
            <div id="form" class="mt-md-4 pb-5">
              <h2 class="fw-bold mb-2 text-uppercase">Forgot Password</h2>
              <p class="text-white-50 mb-5">
                Please enter the email address attached to your merchant account
              </p>

              <div class="form-outline form-white mb-4">
                <input
                  type="text"
                  id="email"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="email">Email</label>
              </div>

              <button
                id="submitBtn"
                class="btn btn-outline-light btn-lg px-5"
                type="submit"
              >
                Reset Password
              </button>
            </div>
            <div id="sentMessage" class="mt-md-4 pb-5" style="display:none;">

              <p>Check your email for a link to reset your password</p>
              <a href="/login" class="text-white-50 fw-bold">Back to merchant
                login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="./js/forgotPassword.js">
</script>