{{> header}}
<div class="row">
  <div class="col-9">
    <header>Tables</header>
    <div id="tables" class="container">
      <div class="row1 d-flex justify-content-evenly tablesParent">
        {{#each tables as |table|}}
          <button
            id="{{table.id}}"
            class="button tablesChild"
          >{{table.table_name}}</button>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-3">
    <header>Bar</header>
    <div class="container">
      <div class="row1 d-flex justify-content-evenly">
        <ul id="bar" class="justify-content-center list-unstyled text-center">
          {{#each tickets as |ticket|}}
            <li><button
                id="{{ticket.id}}"
                class="button tabsChild"
              >{{ticket.bar_tab.tab_name}}</button></li>
          {{/each}}

        </ul>
      </div>
      <div class="row1 d-flex justify-content-evenly">
        <div id="barAdd" class="justify-content-center">

          <div id="newBarTabForm" style="display:none;">
            <form>
              <div class="form-outline form-white mb-4">
                <input
                  type="text"
                  id="tabName"
                  class="form-control form-control-lg"
                />
                <label class="form-label" for="tabName">Name</label>
              </div>
              <button
                id="createTab"
                class="btn btn-outline-light btn-lg px-5"
                type="submit"
              >
                Create
              </button>
            </form>
          </div>
          <button id="barAddBtn">Add Bar Tab</button>
        </div>
      </div>
    </div>
  </div>

</div>
