{{> header}}
<section class="main container-fluid text-center">
  <div id="contentWrap" class="row">
    <!-- SIDEBAR BUTTONS -->
    <div id="sidebar" class="col-4">
      <!-- EDIT EMPLOYEES button -->
      <div
        id="editEmployees"
        type="button"
        class="btn action-btn btn-light edit-employees"
      >
        Edit Employees
      </div>
      <!-- EDIT MENU button -->
      <div
        id="editMenu"
        type="button"
        class="btn action-btn btn-light edit-menu"
      >
        Edit Menu
      </div>
      <!-- VIEW TABLES button -->
      <div
        id="viewTables"
        type="button"
        class="btn action-btn btn-light view-tables"
      >
        View Tables
      </div>
      <!-- VIEW ORDERS button -->
      <div
        id="viewOrders"
        type="button"
        class="btn action-btn btn-light view-orders"
      >
        View Orders
      </div>
    </div>
    <!-- DISPLAY -->
    <div id="sidebarDisplay" class="col-8">

      <!-- EMPLOYEES wrap -->
      <div id="employeesWrap" class="hide">
        <div id="employeeButtonsWrap">
          <div
            id="addNewEmployeeBtn"
            type="button"
            class="btn btn-success display-action-btn"
          >
            Add a New Employee
          </div>
          <div id="updateEmployeeBtn" type="button" class="btn btn-primary display-action-btn">
            Update an Employee
          </div>
          <div
            id="removeEmployeeBtn"
            type="button"
            class="btn btn-danger display-action-btn"
          >
            Remove an Employee
          </div>
        </div>
        {{! [NEW EMPLOYEE] form}}
        <div id="newEmployeeFormWrap" class="hide">
          <form id="newEmployeeForm" class="formStyle text-start">
            <div id="hideEmployeeFormsButton" class="btn btn-warning">Hide Form</div>
            {{! [NEW EMPLOYEE] name }}
            <label for="employeeNameInput">Name:</label><br />
            <input
              type="text"
              id="employeeNameInput"
              name="employeeNameInput"
            />
            <br />
            {{! [NEW EMPLOYEE] email }}
            <label for="employeeEmailInput">e-mail:</label><br />
            <input
              type="email"
              id="employeeEmailInput"
              name="employeeEmailInput"
            />
            <br />
            {{! [NEW EMPLOYEE] Manager ? }}
            <br />
            <div>Manager:
                <select id = "employeeIsManagerIn"class="form-select" aria-label="type">
                  <option selected>Is Manager?</option>
                  <option value="true">yes</option>
                  <option value="false">no</option>
                </select>
            <br />
            </div>Role:
            {{! [NEW EMPLOYEE] Role }}
            <select id = "employeeRoleIn"class="form-select" aria-label="type">
              <option selected>Role</option>
              <option value="Team Lead">Team Lead</option>
              <option value="Host">Host</option>
              <option value="Waiter">Waiter</option>
              <option value="Stove Master">Stove Master</option>
              <option value="Salad Juggler">Salad Juggler</option>
              <option value="Frying Oil Dipper">Frying Oil Dipper</option>
              <option value="Janitor">Janitor</option>
            </select>
            {{! [NEW EMPLOYEE] Submit Button }}
            <br />
            <br />
            <input id="newEmployeeSubmitBtn"
              type="submit"
              class="btn btn-success"
              value="Add a New Employee"
            />
          </form>
        </div>
        {{! [UPDATE EMPLOYEE] form}}
        <div id="updateEmployeeFormWrap" class="hide">
          <form id="updateEmployeeForm" class="formStyle text-start">
            <div id="hideUpdateEmployeeFormsButton" class="btn btn-warning">Hide Form</div>
            <label for="updateEmployeeIdInput">Enter Employee ID you wish to update:</label>
            <br />

            <input
              type="number"
              id="updateEmployeeIdInput"
              name="updateEmployeeIdInput"
            />
            <br />

            {{! [UPDATE EMPLOYEE] name }}
            <label for="employeeNameUpdateInput">Name:</label><br />
            <input
              type="text"
              id="employeeNameUpdateInput"
              name="employeeNameUpdateInput"
            />
            <br />
            {{! [UPDATE EMPLOYEE] email }}
            <label for="employeeEmailUpdateInput">e-mail:</label><br />
            <input
              type="email"
              id="employeeEmailUpdateInput"
              name="employeeEmailUpdateInput"
            />
            <br />
            {{! [UPDATE EMPLOYEE] Manager ? }}
            <br />
            <div>Is Manager?:
                <select id = "employeeIsManagerUpdateIn"class="form-select" aria-label="type">
                  <option selected>Is Manager?</option>
                  <option value="true">Yes</option>
                  <option value="false">No</option>
                </select>
            <br />
            </div>Role:
            {{! [UPDATE EMPLOYEE] Role }}
            <select id = "employeeRoleUpdateIn"class="form-select" aria-label="type">
              <option selected>Role</option>
              <option value="Team Lead">Team Lead</option>
              <option value="Host">Host</option>
              <option value="Waiter">Waiter</option>
              <option value="Stove Master">Stove Master</option>
              <option value="Salad Juggler">Salad Juggler</option>
              <option value="Frying Oil Dipper">Frying Oil Dipper</option>
              <option value="Janitor">Janitor</option>
            </select>
            {{! [UPDATE EMPLOYEE] Submit Button }}
            <br />
            <br />
            <input id="updateEmployeeSubmitBtn"
              type="submit"
              class="btn btn-primary"
              value="Update an Employee"
            />
          </form>
        </div>
        {{! [REMOVE EMPLOYEE] form }}
        <div id="removeEmployeeFormWrap" class="hide">
          <form id="removeEmployeeForm" class="formStyle text-start">
            {{! ----[REMOVE] input }}
            <label for="removeEmployeeIdInput">Enter Employee ID to remove them
              from the Database</label>
            <br />
            <br />
            <input
              type="number"
              id="removeEmployeeIdInput"
              name="removeEmployeeIdInput"
            />
            <input type="submit" class="btn btn-danger" value="Remove" />
            <br />
            <div id="hideRemoveEmployeeFormButton" class="btn btn-warning">Hide
              Form</div>
          </form>
        </div>
        
        {{! employee table headers }}
        <table style="width:100%; text-align:start">
          <tr>
            <th style="width: 7%">ID</th>
            <th style="width: 10%">Login</th>
            <th style="width: 33%">Name</th>
            <th style="width: 25%">Role</th>
            <th style="width: 25%">E-mail</th>
          </tr>
        </table>
        {{! employees populate here }}
        <div id="employeeTableWrap">
        </div>
      </div>

      <!-- MENU wrap -->
      <div id="menuWrap" class="hide">
        {{!-- Action Buttons for Menu Items --}}
        <div id="menuButtonsWrap">
          <div
            id="addNewItemBtn"
            type="button"
            class="btn btn-success display-action-btn"
          >Add a New Item</div>
          <div id="updateItemBtn" type="button" class="btn btn-primary display-action-btn">Update
            an Item</div>
          <div id="removeItemBtn" type="button" class="btn btn-danger display-action-btn">Remove an
            Item</div>
        </div>
        {{! [NEW ITEM] form}}
        <div id="newItemFormWrap" class="hide">
          <form id="newItemForm" class="formStyle text-start">
            <div id="hideMenuFormsButton" class="btn btn-warning">Hide Form</div>
            {{! [NEW ITEM] name }}
            <label for="itemNameInput">Name:</label><br />
            <input type="text" id="itemNameInput" name="itemNameInput" />
            <br />
            {{! [NEW ITEM] price }}
            <br />
            <label for="itemPriceInput">Price:</label><br />
            <input type="number" id="itemPriceInput" name="itemPriceInput" />
            <br />
            {{! [NEW ITEM] description }}
            <br />
            <label for="itemDescriptionInput">Description:</label><br />
            <input
              type="text"
              id="itemDescriptionInput"
              name="itemDescriptionInput"
            />
            <br />
            {{! [NEW ITEM] Availability }}
            <br />
            <div>Available:
                <select id = "itemAvailIn"class="form-select" aria-label="type">
                  <option selected>Is Available?</option>
                  <option value="true">yes</option>
                  <option value="false">no</option>
                </select>
            <br />
              
            </div>

            {{! [NEW ITEM] Type }}
            <br />
            <select id="itemTypeIn"class="form-select" aria-label="type">
              <option selected>Type</option>
              <option value="Food">Food</option>
              <option value="Drink">Drink</option>
              <option value="Merchendise">Merchendise</option>
              <option value="Gift">Gift</option>
            </select>

            {{! [NEW ITEM] Sub-Type }}
            <br />
            <select id="itemSubtypeIn" class="form-select" aria-label="sub-type">
              <option selected>Sub-Type</option>
              <option value="Main Course">Main Course</option>
              <option value="Appetizer">Appetizer</option>
              <option value="Alcoholic">Alcoholic</option>
              <option value="Non-Alcoholic">Non-Alcoholic</option>
              <option value="Hat">Hat</option>
              <option value="Shirt">Shirt</option>
              <option value="Card">Card</option>
              <option value="Certificate">Certificate</option>
            </select>

            {{! [NEW ITEM] Image URL }}
            <br />
            <label for="imageURL">Image URL:</label><br />
            <input type="url" id="imageURL" name="imageURL" />

            {{! [NEW ITEM] Submit Button }}
            <br />
            <br />
            <input
              type="submit"
              class="btn btn-success"
              value="Create a New Item"
            />
          </form>
        </div>
        {{!-- [UPDATE ITEM] form --}}
        <div id="updateItemFormWrap" class="hide">
          <form id="updateItemForm" class="formStyle text-start">
            <div id="hideUpdateItemFormButton" class="btn btn-warning">Hide Form</div>
            <label for="updateItemIdInput">Enter Item ID you wish to update:</label>
            <br />
          
            <input 
            type="number"
            id="updateItemIdInput"
            name="updateItemIdInput"
            />
            <br />

            {{!-- [UPDATE ITEM] name--}}
            <label for="updateItemNameInput">Name:</label><br />
            <input type="text" id="updateItemNameInput" name="updateItemNameInput" />
            <br />
            {{!-- [UPDATE ITEM] price --}}
            <br />
            <label for="updateItemPrice">Price:</label><br />
            <input type="number" id="updateItemPrice" name="updateItemPrice">
            <br />
            {{!-- [UPDATE ITEM] description--}}
            <br />
            <label for="updateItemDescriptionInput">Description:</label><br />
            <input
              type="text"
              id="updateItemDescriptionInput"
              name="updateItemDescriptionInput"
            />
            <br />
            {{!-- [UPDATE ITEM] availability --}}
            <br />
            <select class="form-select" aria-label="type">
              <option selected>Available?</option>
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>

            {{!-- [UPDATE ITEM] type --}}
          <br />
            <select class="form-select" aria-label="type">
              <option selected>Type</option>
              <option value="Food">Food</option>
              <option value="Drink">Drink</option>
              <option value="Merchendise">Merchendise</option>
              <option value="Gift">Gift</option>
            </select>

          {{!-- [UPDATE ITEM] sub-type --}}
          <br />
            <select class="form-select" aria-label="sub-type">
              <option selected>Sub-Type</option>
              <option value="Main Course">Main Course</option>
              <option value="Appetizer">Appetizer</option>
              <option value="Alcoholic">Alcoholic</option>
              <option value="Non-Alcoholic">Non-Alcoholic</option>
              <option value="Hat">Hat</option>
              <option value="Shirt">Shirt</option>
              <option value="Card">Card</option>
              <option value="Certificate">Certificate</option>
            </select>

          {{!-- [UPDATE ITEM] image URL --}}
            <br />
            <label for="updateImageURL">Image URL:</label><br />
            <input type="url" id="updateImageURL" name="updateImageURL" />

          {{!-- [UPDATE ITEM] Submit Button --}}
            <br />
            <br />
            <input
              type="submit"
              class="btn btn-primary"
              value="Update Item"
            />
          </form>
        </div>
        {{!-- [REMOVE ITEM] form --}}
        <div id="removeItemFormWrap" class="hide">
          <form id="removeItemForm" class="formStyle text-start">
            {{! ----[REMOVE] input }}
            <label for="removeItemIdInput">Enter Item ID to remove it from the Database</label>
            <br />
            <br />
            <input
              type="number"
              id="removeItemIdInput"
              name="removeItemIdInput"
            />
            <input type="submit" class="btn btn-danger" value="Remove" />
            <br />
            <div id="hideRemoveItemFormButton" class="btn btn-warning">Hide
              Form</div>
          </form>
        </div>
        {{! menu item table headers }}
        <table style="width:100%; text-align:start">
          <tr>
            <th style="width: 10%">ID</th>
            <th style="width: 40%">Name</th>
            <th style="width: 25%">Type</th>
            <th style="width: 25%">Available</th>
          </tr>
        </table>
        <div id="menuTableWrap">
        </div>
      </div>
      
      <!-- TABLES wrap -->
      <div id="tablesWrap" class="hide">
        <div id="tablesButtonsWrap">
          <div id="addNewTableBtn" type="button" class="btn btn-success display-action-btn">Add a
            New Table</div>
          <div id="removeTableBtn" type="button" class="btn btn-danger display-action-btn">Remove a
            Table</div>
        </div>
        {{!-- [NEW TABLE] form --}}
        <div id="newTableFormWrap" class="hide">
          <form id="newTableForm" class="formStyle text-start">
            <div id="hideTableFormsButton" class="btn btn-warning">Hide Form</div>
            {{! [NEW TABLE] name }}
            <label for="tableNameInput">Name:</label><br />
            <input
              type="text"
              id="tableNameInput"
              name="tableNameInput"
            />
            <br />
            {{! [NEW TABLE] max-size }}
            <br />
            <label for="tableMaxSizeInput">Maximum Size:</label><br />
            <input type="number" id="tableMaxSizeInput" name="tableMaxSizeInput" />
            <br />
            {{! [NEW TABLE] Submit Button }}
            <br />
            <br />
            <input
              type="submit"
              class="btn btn-success"
              value="Add a New Table"
            />
          </form>
        </div>
        {{!-- [REMOVE TABLE] form --}}
        <div id="removeTableFormWrap" class="hide">
          <form id="removeTableForm" class="formStyle text-start">
            <div id="hideRemoveTableFormsButton" class="btn btn-warning">Hide Form</div>
            {{! [REMOVE TABLE] max-size }}
            <br />
            <label for="removeTableIdInput">Enter Table ID:</label><br />
            <input type="number" id="removeTableIdInput" name="removeTableIdInput" />
            <br />
            {{! [REMOVE TABLE] Submit Button }}
            <br />
            <br />
            <input
              type="submit"
              class="btn btn-danger"
              value="Remove the Table"
            />
          </form>
        <div id="ordersTableWrap"></div>
        </div>

        {{!-- tables dbTable headers --}}
        <table style="width:100%; text-align:start">
            <tr>
              <th style="width: 20%">ID</th>
              <th style="width: 40%">Name</th>
              <th style="width: 40%">Max-Size</th>
            </tr>
        </table>
        {{!-- tables populate here --}}
        <div id="tablesTableWrap"></div>


      <!-- ORDERS wrap -->
      <div id="ordersWrap" class="hide">
        <div id="ordersButtonsWrap">
          <div type="button" class="btn btn-success display-action-btn">Add a
            New Order</div>
          <div type="button" class="btn btn-primary display-action-btn">Update
            an Order</div>
          <div type="button" class="btn btn-danger display-action-btn">Remove an
            Order</div>
        </div>
        <div id="ordersTableWrap"></div>
      </div>
    </div>
  </div>

</section>
<script src="/js/admin.js"></script>