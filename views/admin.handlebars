          <div type="button" class="btn btn-danger">
            Remove an Employee
          </div>
        </div>
        <div id="employeeTableWrap"></div>
      </div>
      <!-- MENU wrap -->
      <div id="menuWrap" class="hide">
        <div id="menuButtonsWrap">
          <div type="button" class="btn btn-success">Add a New Item</div>
          <div type="button" class="btn btn-primary">Update an Item</div>
          <div type="button" class="btn btn-danger">Remove an Item</div>
        </div>
        <div id="menuTableWrap"></div>
      </div>
      <!-- ORDERS wrap -->
      <div id="ordersWrap" class="hide">
        <div id="ordersButtonsWrap">
          <div type="button" class="btn btn-success">Add a New Order</div>
          <div type="button" class="btn btn-primary">Update an Order</div>
          <div type="button" class="btn btn-danger">Remove an Order</div>
        </div>
        <div id="ordersTableWrap"></div>
      </div>
    </div>
  </div>
  <nav id="footer_nav" class="row">
    <div class="col">MERCURY POS</div>
  </nav>
