<section class="main container-fluid text-center">
  <div id="header_nav" class="row">
    <div class="col-2 btn nav-btn btn-secondary">Back</div>
    <h1 class="col text-center">Settings</h1>
    <div class="col-2 btn nav-btn btn-secondary">Customize</div>
  </div>
  <div id="contentWrap" class="row">
    <!-- SIDEBAR BUTTONS -->
    <div id="sidebar" class="col-4">
      <!-- EDIT EMPLOYEES button -->
      <div id="editEmployees" type="button" class="btn action-btn btn-light">
        Edit Employees
      </div>
      <!-- EDIT MENU button -->
      <div id="editMenu" type="button" class="btn action-btn btn-light">
        Edit Menu
      </div>
      <!-- VIEW ORDERS button -->
      <div id="viewOrders" type="button" class="btn action-btn btn-light">
        View Orders
      </div>
      <!-- DELETE ORDER button -->
      <div
        id="deleteOrder"
        type="button"
        class="btn action-btn btn-danger hide"
      >
        Delete Order
      </div>
    </div>
    <!-- DISPLAY -->
    <div id="sidebarDisplay" class="col">
      <!-- EMPLOYEES wrap -->
      <div id="employeesWrap" class="hide">
        <div id="employeeButtonsWrap">
          <div type="button" class="btn btn-success display-action-btn">
            Add a New Employee
          </div>
          <div type="button" class="btn btn-primary display-action-btn">
            Update an Employee
          </div>
          <div type="button" class="btn btn-danger display-action-btn">
            Remove an Employee
          </div>
        </div>
        <div id="employeeTableWrap"></div>
      </div>
      <!-- MENU wrap -->
      <div id="menuWrap" class="hide">
        <div id="menuButtonsWrap">
          <div
            id="addNewItemBtn"
            type="button"
            class="btn btn-success display-action-btn"
          >Add a New Item</div>
          <div type="button" class="btn btn-primary display-action-btn">Update
            an Item</div>
          <div type="button" class="btn btn-danger display-action-btn">Remove an
            Item</div>
        </div>
        <div id="menuTableWrap">
          {{! [NEW ITEM] form START }}
          <div id="newItemFormWrap" class="hide">
            <form id="newItemForm" class="formStyle text-start">
              {{! [NEW ITEM] name }}
              <label for="itemNameInput">Name:</label><br />
              <input type="text" id="itemNameInput" name="itemNameInput" />
              <br />
              {{! [NEW ITEM] price }}
              <br />
              <label for="itemPriceInput">Price:</label><br />
              <input type="number" id="itemPriceInput" name="itemPriceInput" />
              <br />
              {{! [NEW ITEM] description }}
              <br />
              <label for="itemDescriptionInput">Description:</label><br />
              <input
                type="text"
                id="itemDescriptionInput"
                name="itemDescriptionInput"
              />
              <br />
              {{! [NEW ITEM] Availability }}
              <br />
              <div>Available:
                {{! YES }}
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="answer"
                    id="yesAnswer"
                  />
                  <label class="form-check-label" for="yesAnswer">
                    Yes
                  </label>
                </div>
                {{! NO }}
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="answer"
                    id="noAnswer"
                  />
                  <label class="form-check-label" for="noAnswer">
                    No
                  </label>
                </div>
              </div>

              {{! [NEW ITEM] Type }}
              <br />
              <select class="form-select" aria-label="type">
                <option selected>Type</option>
                <option value="1">Food</option>
                <option value="2">Drink</option>
                <option value="3">Merchendise</option>
                <option value="4">Gift</option>
              </select>

              {{! [NEW ITEM] Sub-Type }}
              <br />
              <select class="form-select" aria-label="sub-type">
                <option selected>Sub-Type</option>
                <option value="1">Main Course</option>
                <option value="2">Appetizer</option>
                <option value="3">Alcoholic</option>
                <option value="4">Non-Alcoholic</option>
                <option value="5">Hat</option>
                <option value="6">Shirt</option>
                <option value="7">Card</option>
                <option value="8">Certificate</option>
              </select>

              {{! [NEW ITEM] Image URL }}
              <br />
              <label for="imageURL">Image URL:</label><br />
              <input type="url" id="imageURL" name="imageURL" />

              {{! [NEW ITEM] Submit Button }}
              <br />
              <br />
              <input type="submit" value="Create a New Item" />
            </form>
          </div>
          {{! [NEW ITEM] form END }}
        </div>
      </div>
      <!-- ORDERS wrap -->
      <div id="ordersWrap" class="hide">
        <div id="ordersButtonsWrap">
          <div type="button" class="btn btn-success display-action-btn">Add a
            New Order</div>
          <div type="button" class="btn btn-primary display-action-btn">Update
            an Order</div>
          <div type="button" class="btn btn-danger display-action-btn">Remove an
            Order</div>
        </div>
        <div id="ordersTableWrap"></div>
      </div>
    </div>
  </div>
  <nav id="footer_nav" class="row">
    <div class="col">MERCURY POS</div>
  </nav>
</section>
<script src="/js/admin.js"></script>